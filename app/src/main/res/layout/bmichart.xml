<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/BMIChartLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/bmiChartTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/BMIChartTitle"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/BmiChartText"
            android:textSize="30dp"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/BMIClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_check_box_24"
            android:layout_below="@id/warningLL"
            android:layout_centerHorizontal="true"
            android:padding="25dp" />
    </LinearLayout>

</RelativeLayout>